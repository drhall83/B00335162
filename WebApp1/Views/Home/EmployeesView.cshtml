    ViewData["Title"] = "Employee Details -" + Model.EmployeeID;
}
<h2>Employee Details</h2>
<hr />
<div>
    <dl class="dl-horizontal">

        <dt>Employee ID</dt>
        <dd>@Model.EmployeeID</dd>
        <dt>First Name</dt>
        <dd>@Model.FirstName</dd>
        <dt>Last Name</dt>
        <dd>@Model.LastName  N</dd>
        <dt>Title</dt>
        <dd>@Model.Title</dd>
        <dt>Title of Courtesy</dt>
        <dd>@Model.TitleOfCourtesy</dd>
        <dt>BirthDate</dt>
        <dd>@Model.BirthDate</dd>
        <dt>HireDate</dt>
        <dd>@Model.HireDate</dd>
        <dt>Address</dt>
        <dd>@Model.Address</dd>
        <dt>City</dt>
        <dd>@Model.City</dd>
        <dt>Region</dt>
        <dd>@Model.Region</dd>
        <dt>Postal Code</dt>
        <dd>@Model.PostalCode</dd>
        <dt>Counrty</dt>
        <dd>@Model.Country</dd>
        <dt>Home Phone</dt>
        <dd>@Model.HomePhone</dd>
        <dt>Extension</dt>
        <dd>@Model.Extension</dd>
        <dt>Notes</dt>
        <dd>@Model.Notes</dd>
        <dt>Reports To</dt>
        <dd>@Model.ReportsTo</dd>
    </dl>
</div>